{
  "manifest_version": 3,
  "name": "Pomodoro-timer",
  "description": "Intended to help you focus better, reduce procrastination, and improve efficiency and productivity.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/timer-16.png",
    "32": "icons/timer-32.png",
    "48": "icons/timer-48.png",
    "128": "icons/timer-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/timer-16.png",
      "32": "icons/timer-32.png",
      "48": "icons/timer-48.png",
      "128": "icons/timer-128.png"
    }
  },
  "permissions": ["storage","contextMenus","alarms","notifications"],
  "background": {
    "service_worker": "service-worker.js"
  }
}
